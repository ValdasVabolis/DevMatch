<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="well">
        <% if params[:plan] == "2" %>
          <h2>Sign up with Pro</h2>
          <%= render "pro_form" %>
        <% else %>
          <h2>Sign up with Basic</h2>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>