<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <% if user_signed_in? %>
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag "devmatch_banner.png", class: 'banner' %>
      <% if @user.profile %>
        <div class="carousel-caption">
          <h1 class="text-center"><%= "Hello, #{@user.profile.first_name} #{@user.profile.last_name}!" %></h1>
          <%= image_tag @user.profile.avatar.url, class: 'avatar-home-img' %>
          <br>
          <span class="home job-title-icon"><%= job_title_icon %></span>
        </div>
      <% else %>
        <h1>It looks like you don't have a profile yet.</h1>
        <h3>Create a profile now using profile tools below</h3>
      <% end %>
    </div>
  </div>
  <% else %>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active">
        <%= image_tag "devmatch_banner.png", class: 'banner' %>
        <div class="carousel-caption">
          <h1>Welcome to DevMatch</h1>
          <h3>A membership site where entrepreneurs, investors and developers meet</h3>
        </div>
      </div>
      <div class="item">
        <%= image_tag "devmatch_banner.png", class: 'banner' %>
        <div class="carousel-caption">
          <h1>Find the person you were looking for</h1>
          <h3>Our community helps you to discover individuals to help you succeed</h3>
        </div>
      </div>
      <div class="item">
        <%= image_tag "devmatch_banner.png", class: 'banner' %>
        <div class="carousel-caption">
          <h1>Create your profile now</h1>
          <h3>Choose one of the plans below and join our lovely community</h3>
        </div>
      </div>
    </div>
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
      <li data-target="#myCarousel" data-slide-to="1"></li>
      <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span class="sr-only">Next</span>
    </a>
  <% end %>
  

  
</div>
<div class="container home-signup-links">
  <div class="row">
    <% if user_signed_in? %>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Profile</h2>
          <!-- Check if user has a profile created already -->
          <% if current_user.profile %>
            <!-- Show view and edit options -->
            <%= link_to "Edit profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <%= link_to "View profile", user_path(id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <!-- User has not created a profile yet, show them the option to do so -->
          <% else %>
            <p class="text-center">Create your profile to allow community members to discover you.</p>
            <%= link_to "Create profile", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
          <% end %>
        </div>
      </div>
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Community</h2>
          <p class="text-center">Visit our lovely community to meet other developers, entrepreneurs and investors.</p>
          <%= link_to "Visit the community", users_path, class: 'btn btn-default btn-lg btn-block' %>
        </div>
      </div>
    <% else %>
      <!-- basic sign up form -->
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Basic membership link</h2>
          <h4 class="text-center">Sign up for free and get basic access to the community.</h4>
          <br>
          <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: "btn btn-primary btn-lg btn-block" %>
        </div>
      </div>
      <!-- pro sign up form -->
      <div class="col-md-6">
        <div class="well">
          <h2 class="text-center">Pro membership link</h2>
          <h4 class="text-center">Sign up for the Pro account for just $9.99/month and get full access to the community and contact information.</h4>
          <%= link_to "Sign up with Pro", new_user_registration_path(plan: @pro_plan.id), class: "btn btn-success btn-lg btn-block" %>
        </div>
      </div>
    <% end %>
  </div>
  
</div>
