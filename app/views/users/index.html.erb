<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center">The DevMatch Community</h1>
      <p class="text-center">Users must have a profile form created in order to appear here.</p>
      <ul class="list-unstyled">
        <!-- make sure user has a profile before displaying it -->
        <% @users.each do |user| %>
          <% if user.profile %>
            <li>
              <div class="well row user-index-well <%= cycle('white-bg', '') %>">
                <div class="col-sm-4 text-center">
                  <% if user.profile.avatar %>
                    <%= link_to user do %>
                      <%= image_tag user.profile.avatar.url, class: 'avatar-show-img' %>
                    <% end %>  
                  <% end %>
                </div>
                <div>
                  <%= link_to user do %>
                    <h2><%= user.profile.first_name %> <%= user.profile.last_name %></h2>
                  <% end %>
                  <h4><%= user.profile.job_title %></h4>
                  <!-- check if user's account is Pro -->
                  <% if user.plan.id == 2 %>
                    <!-- add a pro label -->
                    <span class="label label-danger">Pro</span>
                  <% end %>
                </div>
              </div>
            </li>
          <br>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>